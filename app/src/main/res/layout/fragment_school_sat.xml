<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    tools:context=".presentation.view.">

    <TextView
        android:id="@+id/tv_school_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:text="BROOKLYN SCHOOL FOR MUSIC and THEATRE" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_school_name"
        android:layout_marginBottom="8dp"
        app:dividerInsetStart="16dp"
        app:dividerInsetEnd="16dp"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_num_of_sat_test_takers_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:visibility="invisible"
        android:text="@string/number_of_test_takers"
        tools:visibility="visible"
        tools:text="@string/number_of_test_takers" />

    <TextView
        android:id="@+id/tv_num_of_sat_test_takers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/tv_num_of_sat_test_takers_label"
        app:layout_constraintTop_toBottomOf="@id/tv_school_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        tools:text="48" />

    <TextView
        android:id="@+id/sat_critical_reading_avg_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_num_of_sat_test_takers"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:visibility="invisible"
        android:text="@string/avg_critical_reading"
        tools:visibility="visible"
        tools:text="@string/avg_critical_reading" />

    <TextView
        android:id="@+id/sat_critical_reading_avg_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/sat_critical_reading_avg_score_label"
        app:layout_constraintTop_toBottomOf="@id/tv_num_of_sat_test_takers"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        tools:text="385" />

    <TextView
        android:id="@+id/sat_math_avg_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sat_critical_reading_avg_score"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:visibility="invisible"
        android:text="@string/avg_math_score"
        tools:visibility="visible"
        tools:text="@string/avg_math_score" />

    <TextView
        android:id="@+id/sat_math_avg_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/sat_math_avg_score_label"
        app:layout_constraintTop_toBottomOf="@id/sat_critical_reading_avg_score"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        tools:text="393" />

    <TextView
        android:id="@+id/sat_writing_avg_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sat_math_avg_score"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:visibility="invisible"
        android:text="@string/avg_writing_score"
        tools:visibility="visible"
        tools:text="@string/avg_writing_score" />

    <TextView
        android:id="@+id/sat_writing_avg_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/sat_writing_avg_score_label"
        app:layout_constraintTop_toBottomOf="@id/sat_math_avg_score"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        tools:text="373" />

</androidx.constraintlayout.widget.ConstraintLayout>